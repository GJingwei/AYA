/*cancer diagnosis in baseline*/
/*it is possible that baseline cancer is different from onset cancer if the time interval between cancer onset and anthracycline prescription is too long*/
/*data preparation*/
proc sql noprint;
create table Comorbidity as select distinct * from AYA.disease where studyid in (select studyid from aya.final);
quit;


data entrydate;
set aya.final;
keep studyid entrydate;
run;

data aya.comorbidity;
merge comorbidity entrydate;
by studyid;
run;


data cancer_icd;
set aya.comorbidity;
where icd like "C%";
run;



data cancer_icd01;
set cancer_icd;
lookback = entrydate-dis_start_date;
if 0<=lookback<=180;
run;

proc sort data = cancer_icd01 nodupkey;
by studyid dis_start_date;
run;

data cancer_icd02;
set cancer_icd01;
if first.studyid;
by studyid;
run;

proc freq data = cancer_icd02;
tables icd/nocum nocol nopercent;
run;

