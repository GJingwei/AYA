libname RAW "D:\raw";
libname MYLIB "D:\mylib";
libname AYA "D:\aya02";


/*demographic*/
proc sql noprint;
create table aya.demographic as select distinct * from AYA.ayapatients where studyid in (select studyid from aya.final);
quit;

data age_group;
set aya.demographic;
if 15<=age<=24 then adult = 0;
else adult = 1;
run;

proc freq data= age_group order=freq;
tables adult/nocum nocol;
run;
/*
adult 986 83.77 
adolescent 191 16.23 
*/



proc freq data= age_group order=freq;
tables sex/nocum nocol;
run;
/*
F 813 69.07 
M 364 30.93 
*/



/*onset cancer*/


proc sql noprint;
create table onset_cancer as select distinct * from aya.cancer_05_22 where studyid in (select studyid from aya.final);
quit;

proc freq data= onset_cancer order=freq;
tables icd/nocum nocol nopercent;
run;

